{
    "compilerOptions": {
        "allowJs" : true, // to combine with "maxNodeModuleJsDepth" option
        "listEmittedFiles" : true, // list the JS files created
        "listFiles" : false, // list the files used during compilation
        "maxNodeModuleJsDepth" : 10, // obligatory with allowJS
        "module" : "commonjs", // module code generation
        "moduleResolution" : "node", // for node.js
        "outDir" : "./", // path for compiled files
        "preserveConstEnums" : true,
        "removeComments" : false,
        "target" : "ES6", // target version of JavaScript
        "types" : []/*,
        "typeRoots" : ["./typings" ]*/
    },
    "files": [ // path to the files to compile
        "./ts/src/index.ts"
    ]
}
